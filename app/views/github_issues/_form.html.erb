<div class="widget-header bordered no-actions d-flex align-items-center">
  <h4><%= page_name %></h4>
</div>
<%= form_with(model: [@github_issue], local: true) do |form| %>
  <% if github_issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(github_issue.errors.count, "error") %> prohibited this github_issue from being saved:</h2>
      <ul>
        <% github_issue.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="widget-body">

    <div class="form-group row d-flex align-items-center mb-5">
      <%= form.label :name, class: 'col-lg-3 form-control-label'%>
      <div class="col-lg-9">
        <%= form.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row d-flex align-items-center mb-5">
      <%= form.label :number, class: 'col-lg-3 form-control-label'%>
      <div class="col-lg-9">
        <%= form.text_field :number, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row d-flex align-items-center mb-5">
      <%= form.label :status, class: 'col-lg-3 form-control-label'%>
      <div class="col-lg-9">
        <%= form.text_field :status, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row d-flex align-items-center mb-5">
      <%= form.label :assignees, class: 'col-lg-3 form-control-label'%>
      <div class="col-lg-9">
        <%= form.text_field :assignees, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row d-flex align-items-center mb-5">
      <%= form.label :label, class: 'col-lg-3 form-control-label'%>
      <div class="col-lg-9">
        <%= form.text_field :label, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row d-flex align-items-center mb-5">
      <%= form.label :milestone, class: 'col-lg-3 form-control-label'%>
      <div class="col-lg-9">
        <%= form.text_field :milestone, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row d-flex align-items-center mb-5">
      <%= form.label :track, class: 'col-lg-3 form-control-label'%>
      <div class="col-lg-9">

        <div class="styled-checkbox">
          <%= form.check_box :track, id: :track %>
          <label for="track"></label>
        </div>
      </div>
    </div>
  </div>

  <div class="actions btn-new ">
    <%= form.submit class: 'btn btn-primary mr-1 mb-2'%>
  </div>
<% end %>
